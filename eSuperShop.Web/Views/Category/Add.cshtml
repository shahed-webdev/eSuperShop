@using eSuperShop.Repository
@model CatalogAddModel
@{
    ViewData["Title"] = "Add Category";
    Layout = "_AdminLayout";
}

<div class="container">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <h4 class="page-header my-3">Add Category</h4>
            <div class="card card-body">
                <form enctype="multipart/form-data" asp-action="Add">
                    <div class="md-form">
                        <select id="parentCatalogId" searchable="Find Category" name="ParentCatalogId" asp-items="ViewBag.ParentCatalog" class="mdb-select">
                            <option value="">Parent Category</option>
                        </select>
                    </div>
                    <div class="md-form">
                        <label for="CatalogName">Category Name</label>
                        <input type="text" asp-for="CatalogName" class="form-control" required>
                        <span asp-validation-for="CatalogName" class="field-validation-error"></span>
                    </div>
                    <div class="md-form">
                        <label for="SlugUrl">Slug Url (allow: a-z, 0-9, -, %)</label>
                        <input type="text" asp-for="SlugUrl" pattern="^[a-z0-9]+(?:-[a-z0-9%]+)*$" class="form-control" required>
                        <span asp-validation-for="SlugUrl" class="field-validation-error"></span>
                    </div>
                    <div class="md-form">
                        <label for="inputDisplayOrder">Display Order</label>
                        <input type="number" name="DisplayOrder" id="inputDisplayOrder" class="form-control">
                    </div>
                    <div class="md-form">
                        <div class="file-field">
                            <div class="btn btn-outline-danger btn-rounded btn-sm float-left">
                                <span>Choose Image<i class="fas fa-upload ml-3" aria-hidden="true"></i></span>
                                <input id="fileImage" name="image" type="file" accept="image/*">
                            </div>
                            <div class="file-path-wrapper">
                                <input id="filePath" class="file-path validate" type="text" placeholder="Upload Category Image" autocomplete="off">
                            </div>
                        </div>
                        <span id="imageError" class="field-validation-error"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <input type="submit" value="Add" class="btn btn-danger" />
                        <a href="/Category"><i class="far fa-long-arrow-alt-left mr-1"></i>Back to List</a>
                    </div>
                    @Html.ValidationMessage("dbCustomError")
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        // Material Select Initialization
        $(function () {
            $('.mdb-select').materialSelect();
        });

        $('input[type="file"]').change(function (e) {
            $("#imageError").text("");
            const $this = $(e.target);
            const $fileField = $this.closest('.file-field');
            const $pathInput = $fileField.find('input.file-path');
            const fileNames = [];

            const size = e.target.files[0].size / 1024 / 1024;
            const regex = new RegExp("(.*?)\.(jpeg|jpg|png|webp)$");

            if (!(regex.test(e.target.value.toLowerCase()))) {
                e.target.value = "";
                $pathInput.val("");

                $("#imageError").text(`Please select correct file format`);
                return;
            }

            if (size > 2) {
                e.target.value = "";
                $pathInput.val("");

                $("#imageError").text(`image size must be less than 2MB. your file size:${size.toFixed()} MB`);
                return;
            }

            fileNames.push(e.target.files[0].name);

            $pathInput.val(fileNames.join(', '));
            $pathInput.trigger('change');
        });
    </script>
}
