@model CatalogShippingCostViewModel
@{
    ViewData["Title"] = "Shipping Cost";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <h4 class="page-header mb-3">Shipping Cost <small>@Model.CatalogName</small></h4>

    <form asp-action="ShippingCost">
        <input type="hidden" name="CatalogId" value="@Model.CatalogId" />
        <div class="card card-body mb-4">
            <h5 class="font-weight-bold mb-3"> Inside Dhaka</h5>
            <div class="row">
                <div class="col-lg-4">
                    <div class="form-group">
                        <label>Basic Cost</label>
                        <input type="number" step="0.01" asp-for="BasicChargeInDhaka" class="form-control" required>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label>Basic Delivery Cost Quantity</label>
                        <input type="number" asp-for="BasicMaxQuantityInDhaka" class="form-control" required>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label>Additional Delivery Cost(%) Per Product</label>
                        <input type="number" step="0.01" asp-for="AdditionalFeePercentageInDhaka" class="form-control" required>
                    </div>
                </div>
            </div>
        </div>

        <div class="card card-body mb-4">
            <h5 class="font-weight-bold mb-3">Outside Dhaka</h5>
            <div class="row">
                <div class="col-lg-4">
                    <div class="form-group">
                        <label>Basic Cost</label>
                        <input type="number" step="0.01" asp-for="BasicChargeOutDhaka" class="form-control" required>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label>Basic Delivery Cost Quantity</label>
                        <input type="number" asp-for="BasicMaxQuantityOutDhaka" class="form-control" required>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label>Additional Delivery Cost(%) Per Product</label>
                        <input type="number" step="0.01" asp-for="AdditionalFeePercentageOutDhaka" class="form-control" required>
                    </div>
                </div>
            </div>
        </div>

        <div class="card card-body">
            <div class="row">
                <div class="col-lg-4">
                    <div class="form-group">
                        <label>Return Within (days)</label>
                        <input type="number" asp-for="ReturnWithin" class="form-control" required>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label>Delivery Within (days)</label>
                        <input type="number" asp-for="DeliveryWithin" class="form-control" required>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group pt-4">
                        <input type="submit" name="btnSubmit" class="btn btn-danger btn-md" value="Submit">
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>