@using eSuperShop.Repository
@model IEnumerable<VendorSliderModel>

@{
    ViewData["Title"] = "Image Slider";
    Layout = "_SellerLayout";
}

@section Styles{
    <style>
        #slider-images .delete { cursor: pointer }
    </style>
}


<div class="container">
    <div class="row align-items-center mb-3">
        <div class="col">
            <h4 class="page-header">Add Slider Image</h4>
        </div>
        <div class="col text-right">
            <a data-toggle="modal" data-target="#InsertModal" class="btn-floating bg-danger" title="Add New">
                <i class="fa fa-plus" aria-hidden="true"></i>
            </a>
        </div>
    </div>

    <div class="card card-body">
        <div id="slider-images" class="row">
            @foreach (var item in Model)
            {
                <div class="col-xl-2 col-lg-4 mb-3">
                    <div class="card h-100">
                        <div class="view overlay">
                            <img class="card-img-top" src="@item.ImageFileName" alt="">
                            <div class="mask rgba-white-slight"></div>
                        </div>

                        <div class="p-3 rounded-bottom d-flex justify-content-between align-items-center">
                            <span>SN: @item.DisplayOrder</span>
                            <i data-id="@item.VendorStoreSliderId" data-url="@item.ImageFileName" class="delete fas fa-trash red-text"></i>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


<!--add modal-->
<div class="modal fade" id="InsertModal" tabindex="-1" role="dialog">
    <div class="modal-dialog cascading-modal" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger">
                <h5 class="m-0 white-text">Image slider</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="white-text">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <form id="addForm">
                    <div class="md-form mb-0">
                        <div class="file-field">
                            <div class="btn btn-outline-danger btn-rounded btn-sm float-left">
                                <span>Choose Image<i class="fas fa-upload ml-3" aria-hidden="true"></i></span>
                                <input id="fileImage" type="file" accept="image/*">
                            </div>
                            <div class="file-path-wrapper">
                                <input id="filePath" class="file-path validate" type="text" placeholder="Upload Image" required>
                            </div>
                        </div>
                    </div>

                    <div class="md-form">
                        <input id="inputRedirectUrl" type="text" class="form-control" placeholder="Redirect Url" />
                    </div>

                    <div class="md-form">
                        <input id="inputDisplayOrder" type="number" class="form-control" placeholder="Display Order" required />
                    </div>

                    <div class="md-form text-center">
                        <input id="btnSubmit" type="submit" value="Add Slider" class="btn btn-danger" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script>
        $(function () {
            // Material Select Initialization
            $('.mdb-select').materialSelect();
        });

        //set image file
        $('#fileImage').change(function (e) {
            const pathInput = $('#filePath');
            const size = e.target.files[0].size / 1024 / 1024;
            const allowSize = 1;
            const regex = new RegExp("(.*?)\.(jpeg|jpg|png|webp)$");

            if (!(regex.test(e.target.value.toLowerCase()))) {
                e.target.value = "";
                pathInput.val("");

                imageError.text(`Please select correct file format`);
                return;
            }

            if (size > allowSize) {
                e.target.value = "";
                pathInput.val("");

                imageError.text(`image size must be less than ${allowSize}MB. your file size:${size.toFixed()} MB`);
                return;
            }

            pathInput.val(e.target.files[0].name);
        });


        //upload image
        const addForm = document.getElementById('addForm');
        const btnSubmit = addForm.btnSubmit;
        const inputDisplayPlace = addForm.inputDisplayPlace;
        const sliderImages = document.getElementById('slider-images');

        //post data
        addForm.addEventListener('submit', function (evt) {
            evt.preventDefault();

            btnSubmit.disabled = true;
            btnSubmit.value = "submitting..";

            const formData = new FormData();
            formData.append("image", document.getElementById('fileImage').files[0]);
            formData.append("RedirectUrl", addForm.inputRedirectUrl.value);
            formData.append("DisplayOrder", addForm.inputDisplayOrder.value);


            $.ajax({
                type: "POST",
                url: "/Store/AddImageSlider",
                data: formData,
                processData: false,
                contentType: false,
                success: function (response) {
                    if (!response.IsSuccess) return;

                    addForm.fileImage.value = "";
                    addForm.filePath.value = "";
                    addForm.inputRedirectUrl.value = "";
                    addForm.inputDisplayOrder.value = "";

                    appendImage(response.Data);

                    btnSubmit.disabled = false;
                    btnSubmit.value = "Add Slider";
                    $("#InsertModal").modal('hide');
                },
                error: function (err) {
                    console.log(err);
                    btnSubmit.disabled = false;
                    btnSubmit.value = "Add Slider";
                }
            });
        });

        //append data
        function appendImage(item) {
            const div = document.createElement('div');
            div.className = 'col-xl-2 col-lg-4 mb-3';
            div.innerHTML = `<div class="card h-100">
                                             <div class="view overlay">
                                                 <img class="card-img-top" src="${item.ImageUrl}" alt="${item.DisplayPlace}">
                                                 <div class="mask rgba-white-slight"></div>
                                             </div>

                                             <div class="p-3 rounded-bottom d-flex justify-content-between align-items-center">
                                                 <span>SN: ${item.DisplayOrder}</span>
                                                 <i data-id="${item.VendorStoreSliderId}" data-url="${item.ImageUrl}" class="delete fas fa-trash red-text"></i>
                                             </div>
                                         </div>`;

            document.getElementById('slider-images').appendChild(div);
        }

        //on delete
        sliderImages.addEventListener('click', function (evt) {
            const element = evt.target;

            const onBtnDelete = element.classList.contains('delete');
            if (!onBtnDelete) return;

            showSpinner(element, true);

            const imageUrl = element.getAttribute('data-url');
            const id = element.getAttribute('data-id');

            $.ajax({
                type: "POST",
                url: "/Store/DeleteImageSlider",
                data: { imageUrl, id },
                success: function (response) {
                    if (response.IsSuccess)
                        element.parentElement.parentElement.parentElement.remove();

                    showSpinner(element, false);
                },
                error: function (err) {
                    console.log(err);
                    showSpinner(element, false);
                }
            });
        });

        //show spinner
        function showSpinner(element, isShow) {
            if (isShow) {
                element.classList.remove("fa-trash");
                element.classList.add("fa-spinner", "fa-spin");
            } else {
                element.classList.remove("fa-spinner", "fa-spin");
                element.classList.add("fa-trash");
            }
        }
    </script>
}
