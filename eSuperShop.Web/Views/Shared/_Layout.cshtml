<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Super Shop</title>

    <!-- Font Awesome -->
    <link href="https://pro.fontawesome.com/releases/v5.8.2/css/all.css" rel="stylesheet" />
    <!-- Bootstrap core CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" />
    <!-- MDB -->
    <link href="~/mdb/css/mdb-core.css" rel="stylesheet" />
    <!-- Custom layout -->
    <link href="~/css/public-master.css?v=1" rel="stylesheet" />

    <!-- Others page style -->
    @await RenderSectionAsync("Styles", false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm top-bar">
            <div class="container">
                <ul class="nav navbar-nav nav-flex-icons ml-auto">
                    @*<li class="nav-item">
                        <a class="nav-link" href=""><i class="fal fa-user-headset mr-1"></i>Help</a>
                    </li>*@
                    <partial name="_LoginPartial" />
                </ul>
            </div>
        </nav>
        <div class="bottom-header">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-3 col-sm-12">
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                            <img src="~/images/logo.svg" alt="logo" />
                        </a>
                    </div>
                    <div class="col-lg-6 col-sm-9 mb-3">
                        <div class="serach-container">
                            <input type="text" placeholder="search products" id="search" class="input-home-search" />
                            <button id="btn-find">
                                <i class="fal fa-search"></i>
                            </button>
                            <select class="mdb-select category-select">
                                <option value="" disabled selected>All Categories</option>
                                <option value="2">category1</option>
                                <option value="2">category2</option>
                                <option value="2">category3</option>
                                <option value="2">category4</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-3">
                        <div class="cart-area">
                            <div>
                                <i class="fal fa-heart"></i>
                            </div>
                            <div>
                                <i class="fal fa-shopping-bag"></i>
                                <span class="cart-product-count">0</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <main style="min-height:822px" class="my-4">
        @RenderBody()
    </main>

    <footer class="page-footer font-small mt-4 footer-bg">
        <div class="footer-top">
            <div class="container d-flex align-items-center justify-content-between">
                <div>
                    <form class="input-group">
                        <input type="email" class="form-control form-control-sm z-depth-1 red lighten-4" placeholder="Enter your email">
                        <div class="input-group-append">
                            <button class="btn btn-sm red m-0" type="button">Sign up</button>
                        </div>
                    </form>
                </div>

                <div class="payment-options">
                    <i class="fab fa-cc-mastercard fa-3x mr-2"></i>
                    <i class="fab fa-cc-visa fa-3x"></i>
                    <i class="fab fa-cc-paypal fa-3x mx-2"></i>
                    <i class="fab fa-cc-amex fa-3x"></i>
                </div>
            </div>
        </div>

        <div class="container text-center text-md-left py-3">
            <div class="row">
                <div class="col-md-3 col-lg-3 mr-auto my-md-4 my-0 mt-4 mb-1">
                    <h5 class="font-weight-bold text-uppercase mb-4">About</h5>
                    <ul class="list-unstyled">
                        <li>
                            <p>
                                <a href="#!">Safe Payment</a>
                            </p>
                        </li>
                        <li>
                            <p>
                                <a href="#!">Careers</a>
                            </p>
                        </li>
                        <li>
                            <p>
                                <a href="#!">E-super shop Blog</a>
                            </p>
                        </li>
                        <li>
                            <p>
                                <a href="#!">Amar Esuper shop</a>
                            </p>
                        </li>
                    </ul>
                </div>

                <hr class="clearfix w-100 d-md-none">

                <div class="col-md-3 col-lg-3 mx-auto my-md-4 my-0 mt-4 mb-1">
                    <h5 class="font-weight-bold text-uppercase mb-4">Buyer Protection</h5>
                    <ul class="list-unstyled">
                        <li>
                            <p>
                                <a href="#!">Returns & Refunds</a>
                            </p>
                        </li>
                        <li>
                            <p>
                                <a href="#!"> Collaborate with us</a>
                            </p>
                        </li>
                        <li>
                            <p>
                                <a href="#!">Partnerships</a>
                            </p>
                        </li>
                        <li>
                            <p>
                                <a href="#!">Affiliate program</a>
                            </p>
                        </li>
                    </ul>
                </div>

                <hr class="clearfix w-100 d-md-none">

                <div class="col-md-3 col-lg-3 mx-auto my-md-4 my-0 mt-4 mb-1">
                    <h5 class="font-weight-bold text-uppercase mb-4">Terms & Conditions</h5>
                    <ul class="list-unstyled">
                        <li>
                            <p>
                                <a href="#!">Privacy Policy</a>
                            </p>
                        </li>
                        <li>
                            <p>
                                <a href="#!">Shopping with us</a>
                            </p>
                        </li>
                        <li>
                            <p>
                                <a href="#!">Making payments</a>
                            </p>
                        </li>
                        <li>
                            <p>
                                <a href="#!">Delivery options</a>
                            </p>
                        </li>
                    </ul>

                </div>

                <hr class="clearfix w-100 d-md-none">

                <div class="col-md-3 col-lg-3 text-center mx-auto my-4">
                    <h5 class="font-weight-bold text-uppercase mb-4">Follow Us</h5>

                    <a class="btn-floating btn-fb"><i class="fab fa-facebook-f"></i></a>
                    <a class="btn-floating btn-tw"><i class="fab fa-twitter"></i></a>
                    <a class="btn-floating btn-li"><i class="fab fa-linkedin-in"></i></a>
                    <a class="btn-floating btn-ins"><i class="fab fa-instagram"></i></a>
                    <a class="btn-floating btn-pin"><i class="fab fa-pinterest"></i></a>
                    <a class="btn-floating btn-yt"><i class="fab fa-youtube"></i></a>
                </div>
            </div>
        </div>

        <div class="footer-copyright text-center py-3">
            © 2020 Copyright:
            <a> esupershop.com</a>
        </div>
    </footer>

    <!-- JQuery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script src="~/mdb/js/mdb-core.js?v=1"></script>
    <!-- axios -->
    <script src="~/lib/api.axios.min.js"></script>
    <!-- VUE JS -->
    <script src="https://cdn.jsdelivr.net/npm/vue"></script>

@await RenderSectionAsync("Scripts", false)

<script>
        $(() => {
            new WOW().init();
            $('.mdb-select').materialSelect();
        });

        //disable wheel in number type input
        document.addEventListener("wheel", () => {
            if (document.activeElement.type === "number")
                document.activeElement.blur();
        });
    </script>
</body>
</html>

