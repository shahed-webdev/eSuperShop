@{
    ViewData["Title"] = "Pending Seller";
    Layout = "_AdminLayout";
}

@section Styles{
  
}


<div class="container">
    <h4 class="page-header mb-3">Pending Seller</h4>

    <div class="card card-body">
        <table id="data-table" class="table table-sm table-bordered">
            <thead>
                <tr>
                    <th><strong>Authorized Person</strong></th>
                    <th><strong>Verified Phone</strong></th>
                    <th><strong>Email</strong></th>
                    <th><strong>Store Name</strong></th>
                    <th><strong>Store Address</strong></th>
                </tr>
            </thead>
        </table>
    </div>
</div>


@section Scripts{
    <script>
        $(function() {
            dataTable.getData();
        });

        //get data
        var dataTable = {
            table: null,
            init: function() {
                dataTable.table = $("#data-table").DataTable({
                    processing: true,
                    serverSide: true,
                    ajax: {
                        url: "/Seller/PendingSeller",
                        type: "POST"
                    },
                    columns:
                    [
                        {
                            data: "AuthorizedPerson", "render": function(data, type, row, meta) {
                                return `<a class="blue-text" href="/Seller/AssignCatalog/${row.VendorId}">${data}</a>`;
                            }
                        },
                        { data: "VerifiedPhone" },
                        { data: "Email" },
                        { data: "StoreName" },
                        { data: "StoreAddress" }
                    ],
                    columnDefs: [
                        //{ 'searchable': false, 'targets': [1, 2] },
                        //{ 'sortable': false, 'targets': [1, 2] },
                        { 'className': "text-center", "targets": [1] }
                    ]
                });
            },
            operand: {
                Equal: 0,
                NotEqual: 1,
                GreaterThan: 2,
                LessThan: 3,
                GreaterThanOrEqual: 4,
                LessThanOrEqual: 5,
                Contains: 6,
                StartsWith: 7,
                EndsWith: 8
            },
            getData: function() {
                dataTable.table ? dataTable.table.ajax.reload() : dataTable.init();
            },
            addSign: function(data) { return `${data}/-` }
        }
    </script>
}
