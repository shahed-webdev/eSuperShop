
@{
    ViewData["Title"] = "Delivered List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="m-md-3">
    <h4 class="page-header mb-3">Delivered Order List</h4>

    <div class="card card-body">
        <table id="data-table" class="table table-sm table-bordered">
            <thead>
                <tr>
                    <th><strong>Order No.</strong></th>
                    <th><strong>Customer Name</strong></th>
                    <th><strong>Phone</strong></th>
                    <th><strong>Amount</strong></th>
                    <th><strong>Discount</strong></th>
                    <th><strong>Net Amount</strong></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script>
        $(function () {
            dataTable.filter.push({ Field: "IsDelivered", Value: true, Operand: dataTable.operand.Equal });
            dataTable.getData();
        });

        //get data
        var dataTable = {
            table: null,
            filter: [],
            init: function () {
                dataTable.table = $("#data-table").DataTable({
                    processing: true,
                    serverSide: true,
                    ajax: {
                        url: "/Order/GetOrderListData",
                        type: "POST",
                        data: function (d) {
                            d.filters = dataTable.filter;
                        }
                    },
                    columns:
                        [
                            { data: "OrderSn" },
                            { data: "CustomerName" },
                            { data: "CustomerVerifiedPhone" },
                            { data: "TotalAmount" },
                            { data: "Discount" },
                            { data: "NetAmount" }
                        ],
                    columnDefs: [
                        //{ 'searchable': false, 'targets': [1, 2] },
                        //{ 'sortable': false, 'targets': [1, 2] },
                        { 'className': "text-right", "targets": [3, 4, 5] }
                    ]
                });
            },
            operand: {
                Equal: 0,
                NotEqual: 1,
                GreaterThan: 2,
                LessThan: 3,
                GreaterThanOrEqual: 4,
                LessThanOrEqual: 5,
                Contains: 6,
                StartsWith: 7,
                EndsWith: 8
            },
            getData: function () {
                dataTable.table ? dataTable.table.ajax.reload() : dataTable.init();
            },
            addSign: function (data) { return `${data}/-` }
        }
    </script>
}